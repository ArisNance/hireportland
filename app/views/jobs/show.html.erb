<header id="inner">
  <div class="container">
  </div>
</header>

<div class="main-section" id="<%= controller_action %>">
  <div class="container">
    
    <div class="page-header">
      <h1>
        <%= @job.title %>
        <small>subtext</small>
      </h1>
      <p> <%= @job.created_at.strftime("%d/%m/%Y") %> - <%= @job.company %> - <%= @job.location %>/<%= @job.remote ? "Remoto": "Presencial" %></p>
    </div>

    <%= simple_format @job.description %>
    <%= content_tag :div, @job.skills, class: "well" if @job.skills %>
    <%= link_to 'Voltar', root_url, :class => 'btn btn-default' %>
    <%= link_to_twitter @job.title %>
  </div>
</div>

