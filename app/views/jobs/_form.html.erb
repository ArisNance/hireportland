<style>
abbr[title], abbr[data-original-title]{
display:none;
}
</style>
<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <%= simple_form_for @job, wrapper_mappings: { radio_buttons: :vertical_radio_and_checkboxes } do |f| %>
	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
      <%= f.input :company, required: true, id: "first_name", class: "form-control input-lg" %>
			</div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
				<%= f.input :website, as: :url, required: true, class: "form-control input-lg" %>
				
			</div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
				<%= f.input :email, autofocus: true, class: "form-control input-lg" %>
			</div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
				<%= f.input :title, autofocus: true, class: "form-control input-lg" %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :description %>
    <!--markdown preview-->
    <div id="description-editor" class="markdown-editor">
        <ul class="nav nav-tabs" data-tabs="tabs">
          <li class="active">
            <a href="#text" data-toggle="tab">Markdown</a>
          </li>
          <li>
            <a href="#preview" data-toggle="tab">Preview</a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="text">
            <%= f.input :description, input_html: { :size => '50x5', 'v-model' => 'description' }, label: false %>
          </div>
          <div class="tab-pane" id="preview">
            <div class="preview" v-html="description | marked"></div>
          </div>
        </div>
      </div>
	</div>

	<div class="row">

		<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
				<%= f.input :salary, as: :radio_buttons, collection: salaries_hash, id: "form-label" %>
			</div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
				<!--boolean for open_or_closed. If closed then ordering is not available for cafe-->
			  <%= f.input :skills, id: "form-label" %>
			</div>
		</div>
				<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
				<!--boolean for open_or_closed. If closed then ordering is not available for cafe-->
			  <%= f.input :modality, as: :radio_buttons, collection: modalities_hash, id: "form-label" %>

        
			</div>
		</div>

		<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
				<%= f.input :location, class: "form-control border-input input-lg", id: "current_password" %>
			</div>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6">
			<div class="form-group">
				<!--boolean for open_or_closed. If closed then ordering is not available for cafe-->
			  <%= f.input :url, as: :url, id: "form-label" %>

        
			</div>
		</div>



	</div>

<div class="actions">
    <%= link_to 'Back', root_url, :class => 'btn btn-default' %>
    <%= f.button :submit, label: "Submit", class: "btn btn-brand" %>
  </div>

<% end %>

  </div>
</div>
