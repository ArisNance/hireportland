
<style>
form{
margin-left: 25%;
font-size: 60px;
color: white;
}
footer{
display:none;
}
</style>
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span id="payment-title">just: $25</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="HirePortland Job Posting"
          data-amount="2500"
          data-locale="auto"></script>
<% end %>